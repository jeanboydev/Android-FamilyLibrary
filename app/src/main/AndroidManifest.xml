<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cn.edu.pku.app.familylibrary">

    <application
        android:name=".base.MainApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.activity.BookInfoActivity"
            android:theme="@style/AppTheme.SlideHorizontal" />
        <activity
            android:name=".ui.activity.BookListActivity"
            android:theme="@style/AppTheme.SlideHorizontal" />
        <activity
            android:name=".ui.activity.BookInfoEditActivity"
            android:theme="@style/AppTheme.SlideHorizontal" />
        <activity
            android:name=".ui.activity.UserListActivity"
            android:theme="@style/AppTheme.SlideHorizontal" />
        <activity
            android:name=".ui.activity.UserInfoEditActivity"
            android:theme="@style/AppTheme.SlideHorizontal" />
        <activity
            android:name=".ui.activity.LoginActivity"
            android:theme="@style/AppTheme.SlideHorizontal" />
        <activity android:name=".ui.activity.BookRecordActivity"></activity>
    </application>

</manifest>